{
  "stage": 0,
  "optional": "runtime",
  "loose": "all",
  "plugins": [
    "typecheck",
    "react-intl"
  ],
  "extra": {
    "react-intl": {
      "messagesDir": "./translations/messages"
    }
  },
  "env": {
    "development": {
      "plugins": [
        "react-transform"
      ],      
      "extra": {
        "react-transform": {
          "transforms": [{
            "transform": "react-transform-catch-errors",
            "imports": [
              "react",
              "redbox-react"
            ]
          }]
        }
      }
    }
  }
}
